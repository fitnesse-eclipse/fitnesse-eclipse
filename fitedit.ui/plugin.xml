<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.contexts">
         <context 
                name="Editing Fitnesse"
                description="Editing Fitnesse Context"
                parentId="org.eclipse.ui.textEditorScope"
                id="fitedit.ui.editors.fitnesseEditorScope">
         </context>
   </extension>
   <extension
         name="Ed"
         point="org.eclipse.ui.editors">
      <editor
            class="fitedit.ui.editors.FitnesseEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            filenames="content.txt"
            icon="icons/icon_doc.gif"
            id="fitedit.ui.editors.FitnesseEditor"
            name="FitNesse Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="fitedit.ui.preferences.FitPreferencePage"
            id="fitedit.preferences.FitPreferencePage"
            name="FitNesse">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="fitedit.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
	  <category
            id="fitedit.core.fitnesseNature.category"
            name="Fitnesse Project Nature commands">
      </category>
      <command
            categoryId="fitedit.core.fitnesseNature.category"
            defaultHandler="fitedit.ui.handlers.AddRemoveFitnesseNatureHandler"
            id="fitedit.core.addRemoveFitnesseNature"
            name="Add/Remove Fitnesse Project Nature">
      </command>
      <category
            id="fitedit.commands.category"
            name="FitEditor Action Category">
      </category>
      <command
            categoryId="fitedit.commands.category"
            id="fitedit.commands.refreshIndexCommand"
            name="Rebuild FitNesse Indexes">
      </command>
      <command
            categoryId="fitedit.commands.category"
            id="fitedit.commands.openFitnesseCommand"
            name="Open FitNesse">
      </command>
      <command
            categoryId="fitedit.commands.category"
            id="fitedit.command.format"
            name="Format">
      </command>
      <command
            categoryId="fitedit.commands.category"
            id="fitedit.command.openBrowser"
            name="Open In Browser">
      </command>
      <command
            categoryId="fitedit.commands.category"
            description="Toggle Comment"
            id="fitedit.command.comment"
            name="Toggle Comment">
      </command>            
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fitedit.ui.handlers.RefreshIndexHandler"
            commandId="fitedit.commands.refreshIndexCommand">
      </handler>
      <handler
            class="fitedit.ui.handlers.OpenFitnesseResouceHandler"
            commandId="fitedit.commands.openFitnesseCommand">
      </handler>
      <handler
            class="fitedit.ui.handlers.FormatHandler"
            commandId="fitedit.command.format">
      </handler>
      <handler
            class="fitedit.ui.handlers.CommentHandler"
            commandId="fitedit.command.comment">
      </handler>
      <handler
            class="fitedit.ui.handlers.OpenBrowserHandler"
            commandId="fitedit.command.openBrowser">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="fitedit.commands.openFitnesseCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Shift+Z">
      </key>
      <key
            commandId="fitedit.command.comment"
            contextId="fitedit.ui.editors.fitnesseEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Shift+C">
      </key>
      <key
            commandId="fitedit.command.format"
            contextId="fitedit.ui.editors.fitnesseEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Shift+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
         	locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu label="Fitnesse">
         	<seperator name="actions">
         	</seperator>
         	<seperator name="toggle">
         	</seperator>
	         	<command
	               commandId="fitedit.core.addRemoveFitnesseNature"
	               label="Disable Fitnesse Nature"
	               style="push">
	            <visibleWhen
	                  checkEnabled="false">
	               <with
	                     variable="selection">
	                  <count
	                        value="1">
	                  </count>
	                  <iterate>
	                     <adapt
	                           type="org.eclipse.core.resources.IProject">
	                        <test
	                              property="org.eclipse.core.resources.projectNature"
	                              value="fitedit.core.fitnesseNature">
	                        </test>
	                     </adapt>
	                  </iterate>
	               </with>
	            </visibleWhen>
	         </command>
         </menu>
         </menuContribution>
	  <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="fitedit.core.addRemoveFitnesseNature"
               label="Convert to Fitnesse Project"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="fitedit.core.fitnesseNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      
      <menuContribution
            locationURI="popup:#TextEditorContext?after=additions">
         <menu
               label="FitNesse">
            <command
                  commandId="fitedit.command.format"
                  label="Format"
                  style="push">
               <visibleWhen>
                  <reference
                        definitionId="fitedit.definition.activeEditor">
                  </reference>
               </visibleWhen>
            </command>
            <command
                  commandId="fitedit.command.openBrowser"
                  label="Open In Browser"
                  style="push">
               <visibleWhen>
                  <reference
                        definitionId="fitedit.definition.activeEditor">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="fitedit.editorContribution1"
            targetID="fitedit.editorContribution1">
         <action
               class="fitedit.ui.EditorActionDelegate1"
               id="fitedit.action1"
               label="label"
               style="push">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="fitedit.definition.activeEditor">
         <with
               variable="activeEditorId">
            <equals
                  value="fitedit.ui.editors.FitnesseEditor">
            </equals>
         </with>
      </definition>
   </extension>

</plugin>
